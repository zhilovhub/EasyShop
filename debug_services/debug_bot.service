[Unit]
Description=debug bot service

Wants=network.target
After=syslog.target network-online.target

[Service]
Environment="PYTHONPATH=/root/DebugEasyShop"
Type=simple
WorkingDirectory=/root/DebugEasyShop/bot
ExecStart=/root/DebugEasyShop/venv/bin/python3 /root/DebugEasyShop/bot/main.py
KillMode=process
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
