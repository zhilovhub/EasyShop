[Unit]
Description=api service

Wants=network.target
After=syslog.target network-online.target

[Service]
Type=oneshot
Environment="PYTHONPATH=/root/EasyShop"
WorkingDirectory=/root/EasyShop/api
ExecStart=/root/EasyShop/venv/bin/python3 -m uvicorn api.main:app --reload --host 0.0.0.0 --port 8080 --ssl-keyfile /root/.certs/key.pem --ssl-certfile /root/.certs/cert.pem

[Install]
WantedBy=multi-user.target
